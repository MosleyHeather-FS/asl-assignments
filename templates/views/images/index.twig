{% extends 'layouts/base.twig' %}

{% block main_content %}
	<h2 class="text-center">
		All Images
	</h2>
	<ul class="text-center d-flex">
		{% for image in images %}
			<li>
				<img class="w-25 h-30" src="/public/images/{{ image.id }}{{ image.extension }}" />
				{{ image.id }}
				-
				<a href="/images/{{ image.id }}">Edit</a>
				<a href="/images/{{ image.id }}/delete">Delete</a>
			</li>
		{% endfor %}
	</ul>
	<div class="text-center">
		<a href="/images/new">Create New Image</a>
	</div>
{% endblock %}
